@model Gauniv.WebServer.Models.AdminCreateGameViewModel
@{
    ViewData["Title"] = "Add Game";
}

<div class="admin-breadcrumb">
    <a href="@Url.Action("Index", "Admin")">Dashboard</a>
    <i class="bi bi-chevron-right" style="font-size: 0.7rem;"></i>
    <a href="@Url.Action("Games", "Admin")">Games</a>
    <i class="bi bi-chevron-right" style="font-size: 0.7rem;"></i>
    <span>Add Game</span>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="admin-table p-4">
            @if (!string.IsNullOrEmpty(Model.Error))
            {
                <div class="admin-alert alert alert-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>@Model.Error
                </div>
            }

            <form method="post" asp-action="CreateGame" enctype="multipart/form-data" class="admin-form">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Game Name <span class="text-danger">*</span></label>
                    <input type="text" name="Name" class="form-control" placeholder="Enter game name"
                           value="@Model.Name" required maxlength="200">
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea name="Description" class="form-control" rows="4"
                              placeholder="Enter game description..." maxlength="2000">@Model.Description</textarea>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Price (€) <span class="text-danger">*</span></label>
                        <input type="number" name="Price" class="form-control" step="0.01" min="0" max="9999.99"
                               value="@Model.Price" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Game File</label>
                        <input type="file" name="GameFile" class="form-control">
                        <small class="text-muted">Optional: upload game file</small>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label">Categories</label>
                    <div class="row">
                        @foreach (var local_cat in Model.AvailableCategories)
                        {
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    <input type="checkbox" name="SelectedCategoryIds" value="@local_cat.Id"
                                           class="form-check-input" id="cat_@local_cat.Id"
                                           @(Model.SelectedCategoryIds.Contains(local_cat.Id) ? "checked" : "")>
                                    <label class="form-check-label" for="cat_@local_cat.Id">
                                        @local_cat.Name
                                        <small class="text-muted">(@local_cat.GameCount games)</small>
                                    </label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-admin btn-admin-primary">
                        <i class="bi bi-plus-lg me-1"></i>Create Game
                    </button>
                    <a href="@Url.Action("Games", "Admin")" class="btn btn-admin btn-admin-outline">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="admin-table p-4">
            <h6 class="fw-bold mb-3"><i class="bi bi-info-circle me-2"></i>Tips</h6>
            <ul style="font-size: 0.85rem; color: #64748b; padding-left: 1.2rem;">
                <li class="mb-2">Game name is required</li>
                <li class="mb-2">Price is in euros (€)</li>
                <li class="mb-2">You can upload a game file for users to download</li>
                <li class="mb-2">Selecting at least one category helps users discover the game</li>
            </ul>
        </div>
    </div>
</div>
