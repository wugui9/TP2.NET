@model Gauniv.WebServer.Models.StoreCategoriesViewModel
@{
    ViewData["Title"] = "游戏分类";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="text-white">
            <i class="bi bi-tags"></i> 游戏分类
            <span class="badge bg-light text-dark">@Model.Categories.Count 个分类</span>
        </h1>
    </div>
</div>

<div class="row">
    @if (!Model.Categories.Any())
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> 暂无分类
            </div>
        </div>
    }
    else
    {
        @foreach (var category in Model.Categories)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <a asp-controller="Store" asp-action="Category" asp-route-id="@category.Id" class="text-decoration-none" style="display: block; height: 100%;">
                    <div class="card h-100" style="cursor: pointer;">
                        <div class="card-body">
                            <h4 class="card-title text-primary">
                                <i class="bi bi-folder"></i>
                                @category.Name
                            </h4>

                            <p class="card-text text-muted">
                                @(category.Description ?? "暂无描述")
                            </p>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-primary" style="font-size: 1rem;">
                                    <i class="bi bi-collection"></i>
                                </span>

                                <span class="text-primary">
                                    <i class="bi bi-arrow-right"></i> 查看游戏
                                </span>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>
