@model Gauniv.WebServer.Models.StoreProfileViewModel
@using Gauniv.WebServer.Controllers
@{
    ViewData["Title"] = "Profile";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg">
            <div class="card-header text-white text-center py-4"
                 style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="bi bi-person-circle" style="font-size: 4rem;"></i>
                <h2 class="mt-3">Profile</h2>
            </div>

            <div class="card-body p-5">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="text-muted mb-2">
                                    <i class="bi bi-person"></i> First Name
                                </h6>
                                <h4>@Model.FirstName</h4>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="text-muted mb-2">
                                    <i class="bi bi-person"></i> Last Name
                                </h6>
                                <h4>@Model.LastName</h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card bg-light mb-4">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">
                            <i class="bi bi-envelope"></i> Email
                        </h6>
                        <h4>@Model.Email</h4>
                    </div>
                </div>

                <div class="card bg-light mb-4">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">
                            <i class="bi bi-calendar"></i> Registered
                        </h6>
                        <h4>@StoreController.FormatDate(Model.RegisteredAt)</h4>
                    </div>
                </div>

                <hr class="my-4">

                <div class="d-grid gap-2">
                    <a asp-controller="Store" asp-action="Library" class="btn btn-primary btn-lg">
                        <i class="bi bi-bookmark-star"></i> View Library
                    </a>

                    <a asp-controller="Store" asp-action="Logout" class="btn btn-outline-danger">
                        <i class="bi bi-box-arrow-right"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
