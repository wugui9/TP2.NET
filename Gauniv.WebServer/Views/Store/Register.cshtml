@model Gauniv.WebServer.Models.StoreRegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg">
            <div class="card-body p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-person-plus-fill" style="font-size: 3rem; color: #5865F2;"></i>
                    <h2 class="mt-3">Register for Gauniv</h2>
                    <p class="text-muted">Create your game account</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.Error))
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle"></i> @Model.Error
                    </div>
                }

                <form asp-controller="Store" asp-action="Register" method="post">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="first_name" class="form-label">
                                <i class="bi bi-person"></i> First Name
                            </label>
                            <input type="text" class="form-control" id="first_name"
                                   name="FirstName" required
                                   value="@Model.FirstName"
                                   placeholder="Aa">
                        </div>
                        <div class="col-md-6">
                            <label for="last_name" class="form-label">
                                <i class="bi bi-person"></i> Last Name
                            </label>
                            <input type="text" class="form-control" id="last_name"
                                   name="LastName" required
                                   value="@Model.LastName"
                                   placeholder="Bb">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">
                            <i class="bi bi-envelope"></i> Email
                        </label>
                        <input type="email" class="form-control" id="email"
                               name="Email" required
                               value="@Model.Email"
                               placeholder="your@email.com">
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">
                            <i class="bi bi-lock"></i> Password
                        </label>
                        <input type="password" class="form-control"
                               id="password" name="Password">
                    </div>

                    <div class="mb-3">
                        <label for="confirm_password" class="form-label">
                            <i class="bi bi-lock-fill"></i> Confirm Password
                        </label>
                        <input type="password" class="form-control"
                               id="confirm_password" name="ConfirmPassword" required
                               placeholder="Re-enter password">
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-person-plus"></i> Register
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
