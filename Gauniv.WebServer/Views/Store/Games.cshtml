@model Gauniv.WebServer.Models.StoreGamesViewModel
@using Gauniv.WebServer.Controllers
@{
    ViewData["Title"] = "Game Store";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="text-white">
            <i class="bi bi-collection"></i> Game Store
            <span class="badge bg-light text-dark">@Model.TotalCount Games</span>
        </h1>
    </div>
</div>

<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5><i class="bi bi-funnel"></i> Filter Options</h5>
                <form method="get" asp-controller="Store" asp-action="Games" class="mt-3">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label">Category</label>
                            <select class="form-select" name="categoryId">
                                <option value="">All Categories</option>
                                @foreach (var category in Model.Categories)
                                {
                                    @if (Model.CategoryId == category.Id)
                                    {
                                        <option value="@category.Id" selected="selected">
                                            @category.Name (@category.GameCount)
                                        </option>
                                    }
                                    else
                                    {
                                        <option value="@category.Id">
                                            @category.Name (@category.GameCount)
                                        </option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Min Price</label>
                            <input type="number" class="form-control" name="minPrice" step="0.01" min="0"
                                   placeholder="Any"
                                   value="@(Model.MinPrice?.ToString("F2") ?? "")">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Max Price</label>
                            <input type="number" class="form-control" name="maxPrice" step="0.01" min="0"
                                   placeholder="Any"
                                   value="@(Model.MaxPrice?.ToString("F2") ?? "")">
                        </div>
                        @if (Model.IsLoggedIn)
                        {
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="form-check mt-2">
                                    <input class="form-check-input" type="checkbox" name="owned" value="true"
                                           id="showOwnedOnly" @(Model.Owned == true ? "checked" : "")>
                                    <label class="form-check-label" for="showOwnedOnly">
                                        Owned Only
                                    </label>
                                </div>
                            </div>
                        }
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search"></i> Filter
                            </button>
                            <a asp-controller="Store" asp-action="Games" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-counterclockwise"></i> Reset
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="gamesList">
    @if (!Model.Games.Any())
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No games found
            </div>
        </div>
    }
    else
    {
        @foreach (var game in Model.Games)
        {
            <div class="col-md-4 col-lg-3 mb-4 game-item" data-owned="@(game.IsOwned ? "1" : "0")">
                <div class="card game-card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@game.Name</h5>

                        @if (game.IsOwned)
                        {
                            <span class="badge bg-success mb-2">
                                <i class="bi bi-check-circle"></i> Owned
                            </span>
                        }

                        <div class="mb-2">
                            @foreach (var catName in game.CategoryNames)
                            {
                                <span class="badge bg-secondary category-badge">@catName</span>
                            }
                        </div>

                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="bi bi-hdd"></i> @StoreController.FormatSize(game.Size)
                            </small>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> @StoreController.FormatDate(game.CreatedAt)
                            </small>
                        </div>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price-tag">@StoreController.FormatPrice(game.Price)</span>
                                <a asp-controller="Store" asp-action="Game" asp-route-id="@game.Id" class="btn btn-primary btn-sm">
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@if (Model.TotalPages > 1)
{
    <div class="row mt-4">
        <div class="col-12">
            <nav>
                <ul class="pagination justify-content-center">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="Store" asp-action="Games"
                               asp-route-page="@(Model.CurrentPage - 1)"
                               asp-route-categoryId="@Model.CategoryId"
                               asp-route-minPrice="@Model.MinPrice"
                               asp-route-maxPrice="@Model.MaxPrice"
                               asp-route-owned="@Model.Owned">
                                <i class="bi bi-chevron-left"></i> Previous
                            </a>
                        </li>
                    }

                    @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-controller="Store" asp-action="Games"
                               asp-route-page="@i"
                               asp-route-categoryId="@Model.CategoryId"
                               asp-route-minPrice="@Model.MinPrice"
                               asp-route-maxPrice="@Model.MaxPrice"
                               asp-route-owned="@Model.Owned">@i</a>
                        </li>
                    }

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="Store" asp-action="Games"
                               asp-route-page="@(Model.CurrentPage + 1)"
                               asp-route-categoryId="@Model.CategoryId"
                               asp-route-minPrice="@Model.MinPrice"
                               asp-route-maxPrice="@Model.MaxPrice"
                               asp-route-owned="@Model.Owned">
                                Next <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
}

