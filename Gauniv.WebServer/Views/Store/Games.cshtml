@model Gauniv.WebServer.Models.StoreGamesViewModel
@using Gauniv.WebServer.Controllers
@{
    ViewData["Title"] = "游戏商店";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="text-white">
            <i class="bi bi-collection"></i> 游戏商店
            <span class="badge bg-light text-dark">@Model.TotalCount 款游戏</span>
        </h1>
    </div>
</div>

<!-- 筛选区域 -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h5><i class="bi bi-funnel"></i> 筛选选项</h5>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label class="form-label">按分类筛选</label>
                        <select class="form-select" id="categoryFilter" onchange="filterByCategory()">
                            <option value="">全部分类</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name (@category.GameCount)</option>
                            }
                        </select>
                    </div>
                    @if (Model.IsLoggedIn)
                    {
                        <div class="col-md-6">
                            <label class="form-label">显示</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="showOwnedOnly">
                                <label class="form-check-label" for="showOwnedOnly">
                                    仅显示已拥有的游戏
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 游戏列表 -->
<div class="row" id="gamesList">
    @if (!Model.Games.Any())
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> 暂无游戏
            </div>
        </div>
    }
    else
    {
        @foreach (var game in Model.Games)
        {
            <div class="col-md-4 col-lg-3 mb-4 game-item" data-owned="@(game.IsOwned ? "1" : "0")">
                <div class="card game-card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@game.Name</h5>

                        @if (game.IsOwned)
                        {
                            <span class="badge bg-success mb-2">
                                <i class="bi bi-check-circle"></i> 已拥有
                            </span>
                        }

                        <div class="mb-2">
                            @foreach (var catName in game.CategoryNames)
                            {
                                <span class="badge bg-secondary category-badge">@catName</span>
                            }
                        </div>

                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="bi bi-hdd"></i> @StoreController.FormatSize(game.Size)
                            </small>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="bi bi-clock"></i> @StoreController.FormatDate(game.CreatedAt)
                            </small>
                        </div>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price-tag">@StoreController.FormatPrice(game.Price)</span>
                                <a asp-controller="Store" asp-action="Game" asp-route-id="@game.Id" class="btn btn-primary btn-sm">
                                    查看详情
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- 分页 -->
@if (Model.TotalPages > 1)
{
    <div class="row mt-4">
        <div class="col-12">
            <nav>
                <ul class="pagination justify-content-center">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="Store" asp-action="Games" asp-route-page="@(Model.CurrentPage - 1)">
                                <i class="bi bi-chevron-left"></i> 上一页
                            </a>
                        </li>
                    }

                    @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-controller="Store" asp-action="Games" asp-route-page="@i">@i</a>
                        </li>
                    }

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="Store" asp-action="Games" asp-route-page="@(Model.CurrentPage + 1)">
                                下一页 <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
}

@section Scripts {
<script>
function filterByCategory() {
    const categoryId = document.getElementById('categoryFilter').value;
    if (categoryId) {
        window.location.href = '@Url.Action("Category", "Store")/' + categoryId;
    }
}

document.getElementById('showOwnedOnly')?.addEventListener('change', function() {
    const gameItems = document.querySelectorAll('.game-item');
    gameItems.forEach(item => {
        if (this.checked) {
            if (item.dataset.owned === '0') {
                item.style.display = 'none';
            }
        } else {
            item.style.display = '';
        }
    });
});
</script>
}
