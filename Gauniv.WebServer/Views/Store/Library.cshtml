@model Gauniv.WebServer.Models.StoreLibraryViewModel
@using Gauniv.WebServer.Controllers
@{
    ViewData["Title"] = "My Library";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none;">
            <div class="card-body text-white">
                <h1>
                    <i class="bi bi-bookmark-star"></i>
                    @Model.UserName's Library
                </h1>
                <p class="lead mb-0">
                    You own <strong>@Model.OwnedGames.Count</strong> games
                </p>
            </div>
        </div>
    </div>
</div>

@if (!Model.OwnedGames.Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card text-center py-5">
                <div class="card-body">
                    <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                    <h3 class="mt-3">Your library is empty</h3>
                    <p class="text-muted">Browse the store to discover games you love!</p>
                    <a asp-controller="Store" asp-action="Games" class="btn btn-primary btn-lg mt-3">
                        <i class="bi bi-shop"></i> Browse Store
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var game in Model.OwnedGames)
        {
            <div class="col-md-4 col-lg-3 mb-4">
                <div class="card game-card h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@game.Name</h5>
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i>
                            </span>
                        </div>

                        <div class="mb-2">
                            @foreach (var catName in game.CategoryNames)
                            {
                                <span class="badge bg-secondary category-badge">@catName</span>
                            }
                        </div>

                        <div class="mb-2">
                            <small class="text-muted">
                                <i class="bi bi-hdd"></i> @StoreController.FormatSize(game.Size)
                            </small>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                Price: <strong>@StoreController.FormatPrice(game.Price)</strong>
                            </small>
                        </div>

                        <div class="mt-auto d-grid gap-2">
                            <a asp-controller="Store" asp-action="StartDownload" asp-route-id="@game.Id" class="btn btn-success">
                                <i class="bi bi-download"></i> Download
                            </a>
                            <a asp-controller="Store" asp-action="Game" asp-route-id="@game.Id" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <h5>
                        <i class="bi bi-graph-up"></i> Library Stats
                    </h5>
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="p-3">
                                <h2 class="text-primary">@Model.OwnedGames.Count</h2>
                                <p class="text-muted mb-0">Games Owned</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3">
                                <h2 class="text-success">@StoreController.FormatSize(Model.TotalSize)</h2>
                                <p class="text-muted mb-0">Total Size</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3">
                                <h2 class="text-info">@StoreController.FormatPrice(Model.TotalValue)</h2>
                                <p class="text-muted mb-0">Total Value</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
