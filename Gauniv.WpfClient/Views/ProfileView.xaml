<UserControl x:Class="Gauniv.WpfClient.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Profile" 
                  FontSize="28" FontWeight="Bold"
                  Margin="0,0,0,30" Foreground="#333333"/>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="500" HorizontalAlignment="Left">
                
                <!-- User info section -->
                <TextBlock Text="Account Information" FontSize="18" FontWeight="SemiBold"
                          Foreground="#333" Margin="0,0,0,15"/>
                
                <Border Background="#F8F9FA" CornerRadius="6" Padding="20" Margin="0,0,0,25">
                    <StackPanel>
                        <!-- Email -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Email" FontSize="12" Foreground="#999" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding Email}" FontSize="15" Foreground="#333"/>
                        </StackPanel>
                        
                        <!-- First Name -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="First Name" FontSize="12" Foreground="#999" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding FirstName}" FontSize="15" Foreground="#333"/>
                        </StackPanel>
                        
                        <!-- Last Name -->
                        <StackPanel Margin="0,0,0,12">
                            <TextBlock Text="Last Name" FontSize="12" Foreground="#999" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding LastName}" FontSize="15" Foreground="#333"/>
                        </StackPanel>
                        
                        <!-- Registered -->
                        <StackPanel>
                            <TextBlock Text="Registered" FontSize="12" Foreground="#999" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding RegisteredAt}" FontSize="15" Foreground="#333"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Install path section -->
                <TextBlock Text="Settings" FontSize="18" FontWeight="SemiBold"
                          Foreground="#333" Margin="0,0,0,15"/>
                
                <Border Background="#F8F9FA" CornerRadius="6" Padding="20" Margin="0,0,0,25">
                    <StackPanel>
                        <TextBlock Text="Install Directory" FontSize="12" Foreground="#999" Margin="0,0,0,6"/>
                        <TextBox Text="{Binding InstallPath, UpdateSourceTrigger=PropertyChanged}" 
                                FontSize="13" Padding="8,6" Margin="0,0,0,10"
                                IsReadOnly="True" Background="#FFF"/>
                        
                        <StackPanel Orientation="Horizontal">
                            <Button Content="Browse..." Command="{Binding BrowseInstallPathCommand}"
                                   Padding="12,6" Margin="0,0,8,0" Cursor="Hand"
                                   Background="#007ACC" Foreground="White" BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                           CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#005A9E"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button Content="Open Folder" Command="{Binding OpenInstallFolderCommand}"
                                   Padding="12,6" Cursor="Hand"
                                   Background="Transparent" Foreground="#007ACC"
                                   BorderBrush="#007ACC" BorderThickness="1">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                           BorderBrush="{TemplateBinding BorderBrush}"
                                                           BorderThickness="{TemplateBinding BorderThickness}"
                                                           CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#007ACC"/>
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Status message -->
                <TextBlock Text="{Binding StatusMessage}" FontSize="13" Foreground="#007ACC"
                          FontWeight="SemiBold" Margin="0,0,0,10"
                          Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Loading overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="2" Background="#80FFFFFF"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <TextBlock Text="Loading..." FontSize="18" Foreground="#666"
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
