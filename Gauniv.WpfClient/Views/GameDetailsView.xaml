<UserControl x:Class="Gauniv.WpfClient.Views.GameDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gauniv.WpfClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" 
               Content="← Back" 
               Command="{Binding GoBackCommand}"
               HorizontalAlignment="Left"
               Padding="15,8"
               Margin="0,0,0,20"
               Background="Transparent"
               Foreground="#007ACC"
               BorderBrush="#007ACC"
               BorderThickness="1"
               Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="4"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#007ACC"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="{Binding Game.Name}" 
                          FontSize="32" 
                          FontWeight="Bold"
                          Margin="0,0,0,10"
                          Foreground="#333333"/>
                
                <TextBlock Text="{Binding Game.CategoryDisplay}" 
                          FontSize="14" 
                          Margin="0,0,0,20"
                          Foreground="#999999"/>
                
                <TextBlock Text="{Binding Game.Price, StringFormat={}{0:F2} €}" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Margin="0,0,0,8"
                          Foreground="#007ACC"/>
                
                <!-- Status badges -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <!-- Owned badge -->
                    <Border CornerRadius="4" Padding="10,4" Margin="0,0,8,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPurchased}" Value="True">
                                        <Setter Property="Background" Value="#D4EDDA"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock FontSize="12" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Not owned"/>
                                    <Setter Property="Foreground" Value="#999"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPurchased}" Value="True">
                                            <Setter Property="Text" Value="Owned"/>
                                            <Setter Property="Foreground" Value="#155724"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                    
                    <!-- Installed badge (only show when owned) -->
                    <Border CornerRadius="4" Padding="10,4"
                           Visibility="{Binding IsPurchased, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#FFF3CD"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDownloaded}" Value="True">
                                        <Setter Property="Background" Value="#D4EDDA"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock FontSize="12" FontWeight="SemiBold">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Not installed"/>
                                    <Setter Property="Foreground" Value="#856404"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDownloaded}" Value="True">
                                            <Setter Property="Text" Value="Installed"/>
                                            <Setter Property="Foreground" Value="#155724"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </StackPanel>
                
                <TextBlock Text="Description" 
                          FontSize="18" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,10"
                          Foreground="#333333"/>
                <TextBlock Text="{Binding Game.Description}" 
                          FontSize="14" 
                          TextWrapping="Wrap"
                          Margin="0,0,0,30"
                          Foreground="#666666"
                          LineHeight="22"/>
                
                <StackPanel Orientation="Horizontal" 
                           Margin="0,0,0,20">
                    <TextBlock Text="Release Date: " 
                              FontSize="14" 
                              Foreground="#666666"/>
                    <TextBlock Text="{Binding Game.CreatedAt, StringFormat=yyyy-MM-dd}" 
                              FontSize="14" 
                              Foreground="#666666"
                              Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <!-- Status message (operation feedback) -->
            <TextBlock Text="{Binding StatusMessage}" 
                      FontSize="13" Foreground="#007ACC" FontWeight="SemiBold"
                      HorizontalAlignment="Right" Margin="0,0,0,8"
                      Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            
            <Button Content="Buy Game" 
                   Command="{Binding PurchaseCommand}"
                   Visibility="{Binding IsPurchased, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                   Padding="20,12"
                   Margin="0,0,10,0"
                   FontSize="16"
                   FontWeight="Bold"
                   Background="#28A745"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4"
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- Download: visible when purchased but not downloaded -->
            <Button Content="Download" 
                   Command="{Binding DownloadCommand}"
                   Visibility="{Binding ShowDownloadButton, Converter={StaticResource BoolToVisibilityConverter}}"
                   Padding="20,12"
                   Margin="0,0,10,0"
                   FontSize="16"
                   FontWeight="Bold"
                   Background="#007ACC"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4"
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- Delete: visible when downloaded -->
            <Button Content="Delete" 
                   Command="{Binding DeleteGameCommand}"
                   Visibility="{Binding IsDownloaded, Converter={StaticResource BoolToVisibilityConverter}}"
                   Padding="20,12"
                   Margin="0,0,10,0"
                   FontSize="16"
                   FontWeight="Bold"
                   Background="#DC3545"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4"
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#C82333"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- Launch: visible when downloaded -->
            <Button Content="Launch" 
                   Command="{Binding LaunchCommand}"
                   Visibility="{Binding IsDownloaded, Converter={StaticResource BoolToVisibilityConverter}}"
                   Padding="20,12"
                   FontSize="16"
                   FontWeight="Bold"
                   Background="#FFC107"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4"
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0A800"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        </StackPanel>
        
        <Grid Grid.Row="0" 
              Grid.RowSpan="3" 
              Background="#80FFFFFF"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <TextBlock Text="Loading..." 
                          FontSize="18"
                          Foreground="#666666"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
