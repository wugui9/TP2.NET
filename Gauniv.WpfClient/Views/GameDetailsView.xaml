<UserControl x:Class="Gauniv.WpfClient.Views.GameDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gauniv.WpfClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 返回按钮 -->
        <Button Grid.Row="0" 
               Content="← 返回" 
               Command="{Binding GoBackCommand}"
               HorizontalAlignment="Left"
               Padding="15,8"
               Margin="0,0,0,20"
               Background="Transparent"
               Foreground="#007ACC"
               BorderBrush="#007ACC"
               BorderThickness="1"
               Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                       BorderBrush="{TemplateBinding BorderBrush}"
                                       BorderThickness="{TemplateBinding BorderThickness}"
                                       CornerRadius="4"
                                       Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" 
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#007ACC"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        
        <!-- 游戏详情 -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 游戏标题 -->
                <TextBlock Text="{Binding Game.Name}" 
                          FontSize="32" 
                          FontWeight="Bold"
                          Margin="0,0,0,10"
                          Foreground="#333333"/>
                
                <!-- 类别 -->
                <TextBlock Text="{Binding Game.CategoryName}" 
                          FontSize="14" 
                          Margin="0,0,0,20"
                          Foreground="#999999"/>
                
                <!-- 价格 -->
                <TextBlock Text="{Binding Game.Price, StringFormat=¥{0:F2}}" 
                          FontSize="28" 
                          FontWeight="Bold"
                          Margin="0,0,0,20"
                          Foreground="#007ACC"/>
                
                <!-- 描述 -->
                <TextBlock Text="游戏描述" 
                          FontSize="18" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,10"
                          Foreground="#333333"/>
                <TextBlock Text="{Binding Game.Description}" 
                          FontSize="14" 
                          TextWrapping="Wrap"
                          Margin="0,0,0,30"
                          Foreground="#666666"
                          LineHeight="22"/>
                
                <!-- 发布日期 -->
                <StackPanel Orientation="Horizontal" 
                           Margin="0,0,0,20">
                    <TextBlock Text="发布日期：" 
                              FontSize="14" 
                              Foreground="#666666"/>
                    <TextBlock Text="{Binding Game.CreatedAt, StringFormat=yyyy-MM-dd}" 
                              FontSize="14" 
                              Foreground="#666666"
                              Margin="5,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 操作按钮 -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            
            <!-- 购买按钮 -->
            <Button Content="购买游戏" 
                   Command="{Binding PurchaseCommand}"
                   Visibility="{Binding IsPurchased, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                   Padding="20,12"
                   Margin="0,0,10,0"
                   FontSize="16"
                   FontWeight="Bold"
                   Background="#28A745"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4"
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- 下载按钮 -->
            <Button Content="下载游戏" 
                   Command="{Binding DownloadCommand}"
                   Visibility="{Binding IsPurchased, Converter={StaticResource BoolToVisibilityConverter}}"
                   Padding="20,12"
                   Margin="0,0,10,0"
                   FontSize="16"
                   FontWeight="Bold"
                   Background="#007ACC"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4"
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- 启动按钮 -->
            <Button Content="启动游戏" 
                   Command="{Binding LaunchCommand}"
                   Visibility="{Binding IsDownloaded, Converter={StaticResource BoolToVisibilityConverter}}"
                   Padding="20,12"
                   FontSize="16"
                   FontWeight="Bold"
                   Background="#FFC107"
                   Foreground="White"
                   BorderThickness="0"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4"
                                           Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0A800"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
        
        <!-- 加载指示器 -->
        <Grid Grid.Row="0" 
              Grid.RowSpan="3" 
              Background="#80FFFFFF"
              Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <TextBlock Text="加载中..." 
                          FontSize="18"
                          Foreground="#666666"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
